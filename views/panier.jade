extends layout

block content
  .container-fluidZZ
    if messages.error
      .alert.alert-danger(role='alert')
        for error in messages.error
          div= error.msg
    if messages.success
      .alert.alert-success(role='alert')
        for success in messages.success
          div= success.msg
    if messages.info
      .alert.alert-info(role='alert')
        for info in messages.info
          div= info.msg
    .row
      - each result in tabpanier
        div.listpan
          img(src='img/'+result.attributes.img)
          ul.liste
            li='name : ' +result.attributes.name
            li='brand : '+result.attributes.brand
            li='size : '+result.attributes.size
            li='price : '+result.attributes.price
            li='gender : '+result.attributes.gender
            li='description : '+result.attributes.desc
            li='quantity : ' + result.attributes.quantity
            form(method='POST', action='/s')
              input(type='hidden', name='id', value=result.attributes.id)
              input.btn.btn-primary(type='submit', value='Supprimer')
    .row
      p.total montant total: #{total}
      a(href='#{btn}')<button class='btn btn-primary'>Payer</button>
